<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Detail Activity"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:layout_scrollFlags="scroll|enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgAnimal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_cat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/namePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cattyu"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgAnimal"/>

            <TextView
                android:id="@+id/idPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID\t\t\t\t\t: "
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/namePet"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/idPetContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/namePet"
                app:layout_constraintStart_toEndOf="@id/idPet"/>

            <TextView
                android:id="@+id/nameAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal\t: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idPet"/>

            <TextView
                android:id="@+id/nameAnimalContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cat"
                app:layout_constraintStart_toEndOf="@id/nameAnimal"
                app:layout_constraintTop_toBottomOf="@id/idPetContent"/>

            <TextView
                android:id="@+id/typeAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type\t\t: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameAnimal"/>

            <TextView
                android:id="@+id/typeAnimalContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bootail"
                app:layout_constraintStart_toEndOf="@id/typeAnimal"
                app:layout_constraintTop_toBottomOf="@id/nameAnimalContent"/>

            <TextView
                android:id="@+id/roomPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room\t: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/typeAnimal"/>

            <TextView
                android:id="@+id/roomPetContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mawar"
                app:layout_constraintStart_toEndOf="@id/roomPet"
                app:layout_constraintTop_toBottomOf="@id/typeAnimalContent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>